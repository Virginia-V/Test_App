	<scene name="scene_test_pano_stone_variant_1" title="test-pano-stone-variant-1" onstart="" thumburl="panos/test_pano_stone_variant_1.tiles/thumb.jpg" lat="" lng="" alt="" heading="">
		
		      <control
          mousetype="drag2d"

          mouseaccelerate="0.25"
          mousespeed="2.2"
          mousefriction="0.96"
          touchfriction="0.965"

          keybaccelerate="0.4"
          keybspeed="35.0"
          keybfriction="0.92"

          mousefovchange="0.3"
          fovspeed="1.0"
          zoomtocursor="false"
          pinchzoom="true"
        />


     <view projection="fisheye"
              fisheye="1.2"
              fovtype="MFOV"
              fov="110"
              fovmin="60"
              fovmax="125"
              maxpixelzoom="2.0"
              limitview="auto" />


		<preview url="panos/test_pano_stone_variant_1.tiles/preview.jpg" />

		<image>
			<cube url="panos/test_pano_stone_variant_1.tiles/%s/l%l/%0v/l%l_%s_%0v_%0h.jpg" multires="512,640,1280,2624,5248" />
		</image>

	</scene>

	<scene name="scene_test_pano_stone_variant_2" title="test-pano-stone-variant-2" onstart="" thumburl="panos/test_pano_stone_variant_2.tiles/thumb.jpg" lat="" lng="" alt="" heading="">
		
		<control bouncinglimits="calc:image.cube ? true : false" />

		<view hlookat="0.0" vlookat="0.0" fovtype="MFOV" fov="120" maxpixelzoom="2.0" fovmin="70" fovmax="140" limitview="auto" />

		<preview url="panos/test_pano_stone_variant_2.tiles/preview.jpg" />

		<image>
			<cube url="panos/test_pano_stone_variant_2.tiles/%s/l%l/%0v/l%l_%s_%0v_%0h.jpg" multires="512,640,1280,2624,5248" />
		</image>

	</scene>

	<scene name="scene_test_pano_wood" title="test-pano-wood" onstart="" thumburl="panos/test_pano_wood.tiles/thumb.jpg" lat="" lng="" alt="" heading="">
		
		<control bouncinglimits="calc:image.cube ? true : false" />

		<view hlookat="0.0" vlookat="0.0" fovtype="MFOV" fov="120" maxpixelzoom="2.0" fovmin="70" fovmax="140" limitview="auto" />

		<preview url="panos/test_pano_wood.tiles/preview.jpg" />

		<image>
			<cube url="panos/test_pano_wood.tiles/%s/l%l/%0v/l%l_%s_%0v_%0h.jpg" multires="512,640,1280,2624,5248" />
		</image>

	</scene>


</krpano>
